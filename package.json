{
  "name": "don-miguel-vacation-manager",
  "version": "1.0.0",
  "description": "Professional vacation management system for Don Miguel Foods supervisors",
  "main": "backend/app.py",
  "scripts": {
    "dev": "python backend/app.py",
    "build-css": "tailwindcss -i static/css/input.css -o static/css/output.css --watch",
    "build-css-prod": "tailwindcss -i static/css/input.css -o static/css/output.css --minify",
    "start": "python backend/app.py",
    "install-deps": "pip install -r requirements.txt",
    "setup-db": "psql -U vacation_user -d vacation_manager -f database/schema.sql",
    "grant-permissions": "psql -U vacation_user -d vacation_manager -f database/grant_permissions.sql"
  },
  "keywords": [
    "vacation",
    "management",
    "flask",
    "tailwindcss",
    "firebase",
    "postgresql"
  ],
  "author": "Gerald Nyah",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "chart.js": "^4.4.1",
    "firebase": "^10.7.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/don-miguel-vacation-manager.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/don-miguel-vacation-manager/issues"
  },
  "homepage": "https://vacationmanager.donmiguelfoods.com"
}
